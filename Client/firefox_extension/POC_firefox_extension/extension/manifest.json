{
  "manifest_version": 2,
  "name": "BSYNC Firefox Extension",
  "version": "1.0.0",
  "description": "Firefox extension for BSYNC framework integration",
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "ws://*/*",
    "wss://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bsync-firefox@example.com"
    }
  }
}
